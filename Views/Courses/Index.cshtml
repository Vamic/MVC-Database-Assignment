@model IEnumerable<MvcDatabase.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Students)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teachers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Assignments)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
        </td>
        <td>
            @(item.Students != null ? item.Students.Count.ToString() : "No") Students
            @Html.ActionLink("Edit", "Edit", new { id = item.Id, list = "Students" })
        </td>
        <td>
            @(item.Teachers != null ? item.Teachers.Count.ToString() : "No") Teachers
            @Html.ActionLink("Edit", "Edit", new { id = item.Id, list = "Teachers" })
        </td>
        <td>
            @(item.Assignments != null ? item.Assignments.Count.ToString() : "No") Assignments
            @Html.ActionLink("Edit", "Edit", new { id = item.Id, list = "Assignments" })
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

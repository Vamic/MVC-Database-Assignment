@model IEnumerable<Assignment>

@{
    var currentController = ViewContext.RouteData.GetRequiredString("controller");
    var requestId = ViewContext.RouteData.Values["id"];
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Assignment item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Course.Name)
                </td>
                <td>
                    @using (Html.BeginForm("RemoveAssignment", currentController, new { id = item.Id, requestId = requestId }, FormMethod.Post, null))
                    {
                        <input type="submit" value="Delete" class="btn btn-default" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>